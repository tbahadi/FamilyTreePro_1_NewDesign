@model IEnumerable<FamilyTreePro.Models.Person>

@{
    ViewData["Title"] = "قائمة الأفراد - " + ViewBag.FamilyTreeName;
    var familyTreeId = ViewBag.FamilyTreeId;
    var familyTreeName = ViewBag.FamilyTreeName;

    // ترتيب الأفراد: المؤسس أولاً، ثم الباقين حسب تاريخ الإنشاء
    var sortedPeople = Model?.OrderByDescending(p => p.IsFounder).ThenBy(p => p.CreatedDate);

    // إحصائيات سريعة
    var totalPeople = Model?.Count() ?? 0;
    var males = Model?.Count(p => p.Gender == "Male") ?? 0;
    var females = Model?.Count(p => p.Gender == "Female") ?? 0;
    var founders = Model?.Count(p => p.IsFounder) ?? 0;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FamilyTreePro</title>

    <!-- Font Awesome للأيقونات -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* متغيرات الألوان المحسنة */
        :root {
            --primary-color: #2c5aa0;
            --secondary-color: #d4af37;
            --accent-color: #e74c3c;
            --success-color: #27ae60;
            --warning-color: #f39c12;
            --info-color: #3498db;
            --light-color: #f8f9fa;
            --dark-color: #2c3e50;
            --text-color: #333;
            --border-color: #e0e0e0;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        /* التصميم العام المحسن */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            line-height: 1.6;
            color: var(--text-color);
        }

        .content-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* بطاقة محسنة */
        .hilal-card {
            background: white;
            border-radius: 20px;
            box-shadow: var(--shadow);
            overflow: hidden;
            margin-bottom: 30px;
            border: 2px solid var(--secondary-color);
        }

        .hilal-header {
            background: linear-gradient(135deg, var(--primary-color), #1e3a8a);
            color: white;
            padding: 30px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .header-pattern {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" fill="rgba(255,255,255,0.1)"><polygon points="50,0 100,50 50,100 0,50"/></svg>');
            background-size: 80px 80px;
        }

        .crescent-design {
            width: 80px;
            height: 40px;
            background: linear-gradient(135deg, var(--secondary-color), #f39c12);
            border-radius: 0 0 40px 40px;
            margin: 0 auto 20px;
            box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
            position: relative;
            z-index: 2;
        }

        .hilal-title {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 2;
        }

        .hilal-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            font-weight: 300;
            position: relative;
            z-index: 2;
        }

        .hilal-body {
            padding: 30px;
        }

        /* بطاقات الإحصائيات */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: linear-gradient(135deg, #ffffff, #f8f9fa);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            transition: var(--transition);
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 1.5rem;
            color: white;
        }

        .stat-male {
            background: var(--info-color);
        }

        .stat-female {
            background: var(--accent-color);
        }

        .stat-total {
            background: var(--success-color);
        }

        .stat-recent {
            background: var(--warning-color);
        }

        .stat-founder {
            background: var(--secondary-color);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark-color);
            display: block;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #666;
            margin-top: 5px;
        }

        /* رسائل التنبيه المحسنة */
        .alert-message {
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 1rem;
            border: 2px solid transparent;
            box-shadow: var(--shadow);
        }

        .alert-success {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            border-color: var(--success-color);
            color: #065f46;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            border-color: var(--accent-color);
            color: #991b1b;
        }

        .alert-info {
            background: linear-gradient(135deg, #cffafe, #a5f3fc);
            border-color: var(--info-color);
            color: #155e75;
        }

        /* الأزرار المحسنة */
        .main-actions {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .responsive-actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .hilal-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            font-size: 0.95rem;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

            .hilal-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: left 0.5s;
            }

            .hilal-btn:hover::before {
                left: 100%;
            }

            .hilal-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            }

        /* ألوان الأزرار المحدثة */
        .btn-primary {
            background: var(--primary-color);
            color: white;
        }

        .btn-success {
            background: var(--success-color);
            color: white;
        }

        .btn-info {
            background: var(--info-color);
            color: white;
        }

        .btn-warning {
            background: var(--warning-color);
            color: white;
        }

        .btn-danger {
            background: var(--accent-color);
            color: white;
        }

        .btn-secondary {
            background: #6b7280;
            color: white;
        }

        .btn-light {
            background: var(--light-color);
            color: var(--dark-color);
            border: 1px solid var(--border-color);
        }

        .btn-sm {
            padding: 8px 12px !important;
            font-size: 0.85rem !important;
        }

        .btn-lg {
            padding: 15px 25px !important;
            font-size: 1.1rem !important;
        }

        /* محسنات الجدول */
        .table-container {
            background: white;
            border-radius: 15px;
            padding: 0;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            overflow: hidden;
        }

        .table-responsive {
            overflow-x: auto;
            border-radius: 15px;
        }

        .hilal-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
            min-width: 800px;
        }

            .hilal-table th {
                background: linear-gradient(135deg, var(--primary-color), #1e3a8a);
                color: white;
                padding: 18px 15px;
                font-weight: 600;
                border: none;
                text-align: right;
                font-size: 1rem;
                position: relative;
                white-space: nowrap;
            }

                .hilal-table th::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    right: 0;
                    width: 100%;
                    height: 2px;
                    background: var(--secondary-color);
                }

            .hilal-table td {
                padding: 16px 15px;
                border-bottom: 1px solid var(--border-color);
                text-align: right;
                vertical-align: middle;
                transition: var(--transition);
            }

            .hilal-table tr:hover td {
                background-color: #f8f9fa;
            }

            .hilal-table tr:last-child td {
                border-bottom: none;
            }

        /* الشارات المحسنة */
        .badge {
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            display: inline-block;
        }

        .bg-primary {
            background: var(--primary-color) !important;
            color: white;
        }

        .bg-pink {
            background: #ec4899 !important;
            color: white;
        }

        .bg-gold {
            background: var(--secondary-color) !important;
            color: white;
        }

        /* مجموعة الأزرار المحسنة */
        .btn-group-custom {
            display: flex;
            gap: 6px;
            flex-wrap: nowrap;
            justify-content: center;
            min-width: 120px;
        }

        /* حالة عدم وجود بيانات */
        .empty-state {
            padding: 50px 20px;
            text-align: center;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-radius: 15px;
            margin: 20px 0;
        }

            .empty-state .fas {
                font-size: 3.5rem;
                margin-bottom: 20px;
                color: #6b7280;
                opacity: 0.7;
            }

        /* فلتر البحث */
        .search-filter-section {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: var(--shadow);
            margin-bottom: 25px;
            border: 1px solid var(--border-color);
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            align-items: end;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .filter-label {
            font-weight: 600;
            color: var(--dark-color);
            font-size: 0.9rem;
        }

        .filter-input {
            padding: 10px 15px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 0.9rem;
            transition: var(--transition);
        }

            .filter-input:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(44, 90, 160, 0.1);
            }

        /* أيقونة العضو */
        .member-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--info-color));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1rem;
            font-weight: bold;
        }

        /* التصميم المتجاوب المحسن */
        @@media (max-width: 1200px) {
            .hilal-body {
                padding: 25px;
            }

            .main-actions {
                flex-direction: column;
                gap: 15px;
            }

            .responsive-actions {
                justify-content: center;
            }
        }

        @@media (max-width: 768px) {
            body {
                padding: 15px;
            }

            .hilal-header {
                padding: 25px 20px;
            }

            .hilal-title {
                font-size: 1.8rem;
            }

            .hilal-subtitle {
                font-size: 1rem;
            }

            .hilal-body {
                padding: 20px;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 15px;
            }

            .main-actions {
                gap: 12px;
            }

            .responsive-actions {
                flex-direction: column;
                width: 100%;
            }

                .responsive-actions .hilal-btn {
                    width: 100%;
                    justify-content: center;
                }

            .table-responsive {
                font-size: 0.85rem;
                border-radius: 12px;
            }

            .hilal-table th,
            .hilal-table td {
                padding: 12px 10px;
            }

            .btn-group-custom {
                flex-direction: column;
                gap: 4px;
            }

                .btn-group-custom .hilal-btn {
                    min-width: 36px;
                    height: 36px;
                    padding: 8px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

            .empty-state {
                padding: 40px 15px;
            }

                .empty-state .fas {
                    font-size: 2.5rem;
                }
        }

        @@media (max-width: 576px) {
            .hilal-title {
                font-size: 1.6rem;
            }

            .hilal-subtitle {
                font-size: 0.9rem;
            }

            .hilal-btn {
                padding: 10px 16px;
                font-size: 0.9rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .alert-message {
                flex-direction: column;
                text-align: center;
                gap: 10px;
                padding: 15px;
            }

            .table-responsive {
                font-size: 0.8rem;
            }

            .hilal-table th,
            .hilal-table td {
                padding: 10px 8px;
            }

            .filter-grid {
                grid-template-columns: 1fr;
            }
        }

        /* تأثيرات إضافية محسنة */
        .text-muted {
            color: #6b7280 !important;
            font-style: italic;
        }

        .hilal-table strong {
            color: var(--primary-color);
            font-weight: 700;
        }

        /* تأثيرات للهواتف */
        @@media (hover: hover) {
            .hilal-btn:hover {
                transform: translateY(-2px);
            }

            .stat-card:hover {
                transform: translateY(-3px);
            }
        }

        /* طباعة */
        @@media print {
            body {
                background: white !important;
            }

            .hilal-card {
                box-shadow: none;
                border: 1px solid #000;
            }

            .hilal-btn,
            .main-actions,
            .search-filter-section {
                display: none !important;
            }

            .table-container {
                box-shadow: none;
                border: 1px solid #000;
            }
        }

        /* تحسينات الوصول */
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        /* تحميل وتفاعلات */
        .loading {
            opacity: 0.6;
            pointer-events: none;
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="content-container">
        <div class="hilal-card fade-in">
            <div class="hilal-header">
                <div class="header-pattern"></div>
                <div class="crescent-design"></div>
                <div class="hilal-title">@familyTreeName</div>
                <div class="hilal-subtitle">إدارة أفراد العائلة</div>
            </div>

            <div class="hilal-body">
                <!-- رسائل التنبيه -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-message alert-success">
                        <i class="fas fa-check-circle fa-lg"></i>
                        <div>@TempData["SuccessMessage"]</div>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert-message alert-danger">
                        <i class="fas fa-exclamation-circle fa-lg"></i>
                        <div>@TempData["ErrorMessage"]</div>
                    </div>
                }

                <!-- إحصائيات سريعة -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon stat-total">
                            <i class="fas fa-users"></i>
                        </div>
                        <span class="stat-number">@totalPeople</span>
                        <span class="stat-label">إجمالي الأفراد</span>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon stat-male">
                            <i class="fas fa-male"></i>
                        </div>
                        <span class="stat-number">@males</span>
                        <span class="stat-label">عدد الذكور</span>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon stat-female">
                            <i class="fas fa-female"></i>
                        </div>
                        <span class="stat-number">@females</span>
                        <span class="stat-label">عدد الإناث</span>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon stat-founder">
                            <i class="fas fa-crown"></i>
                        </div>
                        <span class="stat-number">@founders</span>
                        <span class="stat-label">المؤسسين</span>
                    </div>
                </div>

                <!-- شريط البحث والتصفية -->
                <div class="search-filter-section">
                    <div class="filter-grid">
                        <div class="filter-group">
                            <label class="filter-label">بحث بالاسم</label>
                            <input type="text" class="filter-input" placeholder="ابحث باسم الفرد..." id="searchInput">
                        </div>
                        <div class="filter-group">
                            <label class="filter-label">النوع</label>
                            <select class="filter-input" id="genderFilter">
                                <option value="">جميع الأنواع</option>
                                <option value="Male">ذكر</option>
                                <option value="Female">أنثى</option>
                            </select>
                        </div>
                        <div class="filter-group">
                            <label class="filter-label">النوع</label>
                            <select class="filter-input" id="founderFilter">
                                <option value="">جميع الأفراد</option>
                                <option value="true">المؤسسون فقط</option>
                                <option value="false">الأفراد العاديون</option>
                            </select>
                        </div>
                        <div class="filter-group">
                            <label class="filter-label">&nbsp;</label>
                            <button class="hilal-btn btn-primary" onclick="filterTable()">
                                <i class="fas fa-search"></i> بحث
                            </button>
                        </div>
                    </div>
                </div>

                <!-- أزرار الإجراءات الرئيسية -->
                <div class="main-actions">
                    <div class="responsive-actions">
                        <a href="@Url.Action("Create", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-primary">
                            <i class="fas fa-user-plus"></i> إضافة فرد جديد
                        </a>
                        <a href="@Url.Action("ProfessionalTree", "Person", new { familyTreeId = familyTreeId })" class="hilal-btn btn-success">
                            <i class="fas fa-sitemap"></i> الشجرة المتقدمة
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="hilal-btn btn-light">
                            <i class="fas fa-arrow-right"></i> العودة للرئيسية
                        </a>
                    </div>
                    <div class="responsive-actions">
                        <button class="hilal-btn btn-info" onclick="exportToExcel()">
                            <i class="fas fa-file-excel"></i> تصدير Excel
                        </button>
                        <button class="hilal-btn btn-secondary" onclick="printTable()">
                            <i class="fas fa-print"></i> طباعة
                        </button>
                    </div>
                </div>

                <!-- قائمة الأفراد -->
                @if (sortedPeople != null && sortedPeople.Any())
                {
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table hilal-table" id="peopleTable">
                                <thead>
                                    <tr>
                                        <th>الصورة</th>
                                        <th>الاسم الكامل</th>
                                        <th>النوع</th>
                                        <th>تاريخ الميلاد</th>
                                        <th>المهنة</th>
                                        <th>الدولة</th>
                                        <th>تاريخ الإضافة</th>
                                        <th width="150">الإجراءات</th> <!-- ⭐ إضافة عرض ثابت -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var person in sortedPeople)
                                    {
                                        <tr data-gender="@person.Gender" data-name="@GetFullName(person).ToLower()" data-founder="@person.IsFounder.ToString().ToLower()">
                                            <td>
                                                <div class="member-avatar">
                                                    @if (person.Gender == "Male")
                                                    {
                                                        <i class="fas fa-male"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-female"></i>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <strong>@GetFullName(person)</strong>
                                                @if (person.IsFounder)
                                                {
                                                    <span class="badge bg-gold">مؤسس</span>
                                                }
                                                @if (!string.IsNullOrEmpty(person.Nickname) && person.Nickname != "لا يوجد")
                                                {
                                                    <br>
                                                    <small class="text-muted">(@person.Nickname)</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @(person.Gender == "Male" ? "bg-primary" : "bg-pink")">
                                                    @(person.Gender == "Male" ? "ذكر" : "أنثى")
                                                </span>
                                            </td>
                                            <td>
                                                @if (person.BirthDate.HasValue)
                                                {
                                                    @person.BirthDate.Value.ToString("yyyy/MM/dd")
                                                    <br>
                                                    <small class="text-muted">(@CalculateAge(person.BirthDate.Value) سنة)</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير معروف</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(person.Occupation?.Name))
                                                {
                                                    @person.Occupation.Name
                                                }
                                                else
                                                {
