    <!-- دالة حساب العمر -->
    @functions {
        public string CalculateAge(DateTime birthDate)
        {
            var today = DateTime.Today;
            var age = today.Year - birthDate.Year;
            if (birthDate.Date > today.AddYears(-age)) age--;
            return age.ToString();
        }

        // دالة لبناء الاسم الكامل مع مراعاة المؤسس
        // ⭐⭐ التعديل: نفس منطق الدالة في الكود الخلفي ⭐⭐
        // ⭐⭐ الإصلاح النهائي: إزالة كلمة "غير معروف" تماماً ⭐⭐
        public string GetFullName(FamilyTreePro.Models.Person person)
        {
            if (person == null) return "غير معروف";

            var names = new List<string>();

            // الاسم الأول فقط
            if (!string.IsNullOrEmpty(person.FirstName))
                names.Add(person.FirstName.Trim());

            // ⭐⭐ نعرض فقط الحقول التي تحتوي على بيانات فعلية ⭐⭐
            // ⭐⭐ بدون إضافة أي نص افتراضي ⭐⭐
            if (!string.IsNullOrEmpty(person.FatherName) && person.FatherName.Trim() != "غير معروف")
                names.Add(person.FatherName.Trim());

            if (!string.IsNullOrEmpty(person.GrandFatherName) && person.GrandFatherName.Trim() != "غير معروف")
                names.Add(person.GrandFatherName.Trim());

            if (!string.IsNullOrEmpty(person.LastName) && person.LastName.Trim() != "غير معروف")
                names.Add(person.LastName.Trim());

            return names.Any() ? string.Join(" ", names) : "غير معروف";
        }
    
    }

    <!-- JavaScript المحسن -->
    <script>
        // تصفية الجدول
        function filterTable() {
                const searchText = document.getElementById('searchInput').value.toLowerCase();
        const genderFilter = document.getElementById('genderFilter').value;
        const founderFilter = document.getElementById('founderFilter').value;
        const rows = document.querySelectorAll('#peopleTable tbody tr');

        let visibleCount = 0;

        rows.forEach(row => {
            const name = row.getAttribute('data-name');
            const gender = row.getAttribute('data-gender');
            const founder = row.getAttribute('data-founder');
            let showRow = true;

            if (searchText && !name.includes(searchText)) {
                showRow = false;
            }

            if (genderFilter && gender !== genderFilter) {
                showRow = false;
            }

            if (founderFilter && founder !== founderFilter) {
                showRow = false;
            }

            row.style.display = showRow ? '' : 'none';
            if (showRow) visibleCount++;
        });

        // تحديث العداد
        const counter = document.querySelector('.text-center small');
        if (counter) {
            counter.textContent = `عرض ${visibleCount} فرد من أصل ${@totalPeople}`;
        }
        }

        // تصدير إلى Excel
        function exportToExcel() {
            // محاكاة التصدير (يمكن استبدالها بمكتبة مثل SheetJS)
            alert('سيتم تصدير البيانات إلى ملف Excel. هذه ميزة تجريبية.');

            // هنا يمكن إضافة كود التصدير الفعلي
            // مثال: window.location = '@Url.Action("ExportToExcel", "Person", new { familyTreeId = familyTreeId })';
        }

        // طباعة الجدول
        function printTable() {
            window.print();
        }

        // تأثيرات عند التحميل
        document.addEventListener('DOMContentLoaded', function() {
            // تأثير ظهور الصفوف
            const tableRows = document.querySelectorAll('#peopleTable tbody tr');
            tableRows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateX(30px)';

                setTimeout(() => {
                    row.style.transition = 'all 0.5s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateX(0)';
                }, index * 50);
            });

            // تأثيرات الأزرار
            const buttons = document.querySelectorAll('.hilal-btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px) scale(1.02)';
                });

                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // البحث أثناء الكتابة
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', filterTable);
            }
        });

        // تأثير للهلال
        const crescent = document.querySelector('.crescent-design');
        if (crescent) {
            crescent.addEventListener('mouseover', function() {
                this.style.transform = 'scale(1.1) rotate(5deg)';
                this.style.transition = 'transform 0.3s ease';
            });

            crescent.addEventListener('mouseout', function() {
                this.style.transform = 'scale(1) rotate(0)';
            });
        }

        // إضافة تأثير النقر على البطاقات
        const statCards = document.querySelectorAll('.stat-card');
        statCards.forEach(card => {
            card.addEventListener('click', function() {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        });
    </script>
