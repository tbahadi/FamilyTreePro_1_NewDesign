            }

        .feature-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 15px;
        }

        .feature-icon {
            width: 35px;
            height: 35px;
            background: #f8f9fa;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #4a69bd;
            font-size: 14px;
        }

        .feature-header h3 {
            margin: 0;
            color: #2c3e50;
            font-size: 14px;
            font-weight: 600;
        }

        /* التوصيات الذكية */
        .smart-recommendations {
            grid-column: 1 / -1;
        }

        .rec-card {
