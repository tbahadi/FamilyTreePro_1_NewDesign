@{
    ViewData["Title"] = "تسجيل الدخول - شجرة العائلة";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var rememberMe = ViewBag.RememberMe != null && (bool)ViewBag.RememberMe;
    var username = ViewBag.Username ?? "";
}

<div class="family-login-page">
    <!-- شريط النسخة التجريبية -->
    <div class="trial-version-banner">
        <div class="trial-content">
            <i class="fas fa-flask"></i>
            <span>هذا الموقع يعمل حاليًا في نسخة تجريبية</span>
        </div>
    </div>

    <!-- خلفية العائلة -->
    <div class="family-background">
        <div class="generation-lines">
            <div class="gen-line gen-1"></div>
            <div class="gen-line gen-2"></div>
            <div class="gen-line gen-3"></div>
            <div class="gen-line gen-4"></div>
        </div>

        <!-- النسيج العائلي الحي -->
        <div class="living-family-fabric">
            <div class="fabric-canvas" id="familyFabric"></div>
        </div>
    </div>

    <div class="login-container">
        <div class="family-login-card">
            <!-- الهيدر -->
            <div class="family-card-header">
                <div class="header-content">
                    <div class="logo-container">
                        <div class="family-tree-icon">
                            <i class="fas fa-tree"></i>
                        </div>
                        <div class="title-section">
                            <h1>شجرة العائلة</h1>
                            <p class="tagline">حيث تلتقي الأجيال وتتواصل القلوب</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@ViewBag.Error</span>
                    </div>
                }

                <!-- نموذج التسجيل -->
                <div class="login-section">
                    <form asp-action="Login" method="post" class="login-form">
                        @Html.AntiForgeryToken()

                        <div class="input-field">
                            <div class="input-wrapper">
                                <i class="fas fa-user icon"></i>
                                <input type="text" id="username" name="username" required
                                       placeholder="اسم المستخدم" value="@username">
                            </div>
                        </div>

                        <div class="input-field">
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon"></i>
                                <input type="password" id="password" name="password" required
                                       placeholder="كلمة المرور">
                                <button type="button" class="toggle-password" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="form-actions">
                            <label class="checkbox-wrapper">
                                <input type="checkbox" id="rememberMe" name="rememberMe" @(rememberMe ? "checked" : "")>
                                <span class="checkmark"></span>
                                تذكر دخولي
                            </label>
                            <a href="@Url.Action("ForgotPassword", "Account")" class="forgot-link">نسيت كلمة المرور؟</a>
                        </div>

                        <!-- قسم المزايا المدمج -->
                        <div class="quick-benefits">
                            <h3 class="benefits-title">
                                <i class="fas fa-star"></i>
                                استمتع بمزايا شجرة العائلة
                            </h3>
                            <div class="benefits-list">
                                <div class="benefit-item">
                                    <i class="fas fa-tree benefit-icon"></i>
                                    <span>شجرة عائلة رقمية متكاملة</span>
                                </div>
                                <div class="benefit-item">
                                    <i class="fas fa-users benefit-icon"></i>
                                    <span>تواصل آمن مع الأقارب</span>
                                </div>
                                <div class="benefit-item">
                                    <i class="fas fa-photo-video benefit-icon"></i>
                                    <span>أرشيف صور وذكريات</span>
                                </div>
                                <div class="benefit-item">
                                    <i class="fas fa-shield-alt benefit-icon"></i>
                                    <span>خصوصية وأمان تام</span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="submit-btn">
                            <span>دخول إلى الشجرة</span>
                            <i class="fas fa-arrow-left"></i>
                        </button>
                    </form>
                </div>

                <!-- الإحصائيات -->
                <div class="stats-section">
                    <div class="family-stats">
                        @{
                            var stats = new[]
                            {
                                                new { Icon = "fas fa-users", Number = "١٠٠٠+", Label = "عائلة" },
                                                new { Icon = "fas fa-network-wired", Number = "٥٠٠٠+", Label = "ترابط" },
                                                new { Icon = "fas fa-history", Number = "١٠٠+", Label = "سنة" }
                                                };
                        }

                        @foreach (var stat in stats)
                        {
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="@stat.Icon"></i>
                                </div>
                                <div class="stat-info">
                                    <span class="stat-number">@stat.Number</span>
                                    <span class="stat-label">@stat.Label</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- الميزات التفاعلية -->
                <div class="features-grid">
                    <!-- التوصيات الذكية -->
                    <div class="feature-card smart-recommendations">
                        <div class="feature-header">
                            <i class="feature-icon fas fa-lightbulb"></i>
                            <h3>توصيات ذكية</h3>
                        </div>
                        <div class="recommendation-cards">
                            <div class="rec-card" data-type="connect">
                                <div class="rec-content">
                                    <h4>تواصل مع الأقارب</h4>
                                    <p>اكتشف 5 أقارب جدد</p>
                                </div>
                                <button class="rec-action">استكشف</button>
                            </div>
                        </div>
                    </div>

                    <!-- المؤشر الحيوي -->
                    <div class="feature-card family-vitality">
                        <div class="feature-header">
                            <i class="feature-icon fas fa-heartbeat"></i>
                            <h3>الحيوية العائلية</h3>
                        </div>
                        <div class="vitality-content">
                            <div class="vitality-score">85%</div>
                            <div class="vitality-metrics">
                                <div class="metric">
                                    <span class="metric-label">التواصل</span>
                                    <div class="metric-bar">
                                        <div class="metric-fill" style="width: 78%"></div>
                                    </div>
                                </div>
                                <div class="metric">
                                    <span class="metric-label">النمو</span>
                                    <div class="metric-bar">
                                        <div class="metric-fill" style="width: 92%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- المساعد الذكي -->
                    <div class="feature-card family-ai-assistant">
                        <div class="feature-header">
                            <i class="feature-icon fas fa-robot"></i>
                            <h3>المساعد الذكي</h3>
                        </div>
                        <div class="ai-suggestions">
                            <div class="ai-suggestion">
                                "هل تريد إضافة صورة لجدك؟"
                            </div>
                        </div>
                    </div>

                    <!-- النسيج العائلي -->
                    <div class="feature-card fabric-preview">
                        <div class="feature-header">
                            <i class="feature-icon fas fa-project-diagram"></i>
                            <h3>النسيج العائلي</h3>
                        </div>
                        <div class="fabric-preview-canvas" id="fabricPreview"></div>
                        <div class="fabric-stats-preview">
                            <span class="fabric-stat">١٢٤ عائلة متصلة</span>
                        </div>
                    </div>
                </div>

                <!-- التسجيل الجديد -->
                <div class="alternative-actions">
                    <p>جديد معنا؟ <a asp-action="Register" asp-controller="Account" class="register-link">ابدأ شجرتك الآن</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

