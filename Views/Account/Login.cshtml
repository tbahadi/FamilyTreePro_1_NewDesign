        .alternative-actions {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid #ecf0f1;
        }

            .alternative-actions p {
                color: #7f8c8d;
                margin: 0;
            }

        .register-link {
            color: #4a69bd;
            text-decoration: none;
            font-weight: 600;
        }

        /* الخلفية والنسيج */
        .family-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .generation-lines {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
