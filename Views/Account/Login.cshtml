            }

            .form-actions {
                flex-direction: column;
                gap: 10px;
                align-items: flex-start;
            }

            .forgot-link {
                align-self: flex-end;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // إظهار/إخفاء كلمة المرور
            const togglePassword = document.getElementById('togglePassword');
            const password = document.getElementById('password');

            if (togglePassword && password) {
                togglePassword.addEventListener('click', function() {
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);
                    this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
                });
            }

            // تأثيرات بسيطة للحقول
            const inputs = document.querySelectorAll('.input-wrapper input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'translateY(0)';
                });
            });

            // تفعيل التوصيات الذكية
            const recActions = document.querySelectorAll('.rec-action');
            recActions.forEach(btn => {
                btn.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 150);
                });
            });

            // إنشاء نسيج بسيط للمعاينة
            function createFabricPreview() {
                const canvas = document.getElementById('fabricPreview');
                for (let i = 0; i < 15; i++) {
                    const node = document.createElement('div');
                    node.style.cssText = `
                        position: absolute;
                        width: 4px;
                        height: 4px;
                        background: #4a69bd;
                        border-radius: 50%;
                        left: ${10 + Math.random() * 80}%;
                        top: ${10 + Math.random() * 80}%;
                        opacity: 0.6;
                    `;
                    canvas.appendChild(node);
                }
            }

            // تهيئة المؤثرات
            setTimeout(function() {
                document.querySelector('.family-login-card').style.opacity = '1';
            }, 100);

            createFabricPreview();
        });
    </script>
