@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // إظهار/إخفاء كلمة المرور
            const togglePassword = document.getElementById('togglePassword');
            const password = document.getElementById('Password');

            if (togglePassword && password) {
                togglePassword.addEventListener('click', function() {
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);
                    this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
                });
            }

            // تأثيرات بسيطة للحقول
            const inputs = document.querySelectorAll('.input-wrapper input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'translateY(0)';
                });
            });

            // بيانات رموز الدول
            const countryCodes = [
                { code: '+966', name: 'المملكة العربية السعودية', flag: '🇸🇦' },
                { code: '+971', name: 'الإمارات العربية المتحدة', flag: '🇦🇪' },
                { code: '+965', name: 'الكويت', flag: '🇰🇼' },
                { code: '+973', name: 'البحرين', flag: '🇧🇭' },
                { code: '+968', name: 'عُمان', flag: '🇴🇲' },
                { code: '+974', name: 'قطر', flag: '🇶🇦' },
                { code: '+20', name: 'مصر', flag: '🇪🇬' },
                { code: '+962', name: 'الأردن', flag: '🇯🇴' },
                { code: '+963', name: 'سوريا', flag: '🇸🇾' },
                { code: '+961', name: 'لبنان', flag: '🇱🇧' },
                { code: '+964', name: 'العراق', flag: '🇮🇶' },
                { code: '+967', name: 'اليمن', flag: '🇾🇪' },
                { code: '+213', name: 'الجزائر', flag: '🇩🇿' },
                { code: '+212', name: 'المغرب', flag: '🇲🇦' },
                { code: '+216', name: 'تونس', flag: '🇹🇳' },
                { code: '+218', name: 'ليبيا', flag: '🇱🇾' },
                { code: '+249', name: 'السودان', flag: '🇸🇩' },
                { code: '+1', name: 'الولايات المتحدة', flag: '🇺🇸' },
                { code: '+44', name: 'المملكة المتحدة', flag: '🇬🇧' },
                { code: '+33', name: 'فرنسا', flag: '🇫🇷' },
                { code: '+49', name: 'ألمانيا', flag: '🇩🇪' },
                { code: '+39', name: 'إيطاليا', flag: '🇮🇹' },
                { code: '+34', name: 'إسبانيا', flag: '🇪🇸' },
                { code: '+90', name: 'تركيا', flag: '🇹🇷' },
                { code: '+7', name: 'روسيا', flag: '🇷🇺' },
                { code: '+86', name: 'الصين', flag: '🇨🇳' },
                { code: '+81', name: 'اليابان', flag: '🇯🇵' },
                { code: '+82', name: 'كوريا الجنوبية', flag: '🇰🇷' },
                { code: '+91', name: 'الهند', flag: '🇮🇳' },
                { code: '+61', name: 'أستراليا', flag: '🇦🇺' }
            ];

            // تهيئة اختيار رمز الدولة
            const countrySelector = document.querySelector('.country-code-selector');
            const selectedCountry = document.getElementById('selectedCountry');
            const countryDropdown = document.getElementById('countryDropdown');
            const countryList = document.getElementById('countryList');
            const countrySearch = document.getElementById('countrySearch');
            const phoneNumber = document.getElementById('phoneNumber');
            const phoneError = document.getElementById('phoneError');

            let selectedCountryData = countryCodes[0]; // السعودية كافتراضي

            // تعبئة قائمة الدول
            function populateCountryList(countries) {
                countryList.innerHTML = '';
                countries.forEach(country => {
                    const countryItem = document.createElement('div');
                    countryItem.className = 'country-item';
                    if (country.code === selectedCountryData.code) {
                        countryItem.classList.add('active');
                    }
                    countryItem.innerHTML = `
                        <span class="country-item-flag">${country.flag}</span>
                        <span class="country-item-name">${country.name}</span>
                        <span class="country-item-code">${country.code}</span>
                    `;
                    countryItem.addEventListener('click', () => {
                        selectCountry(country);
                    });
                    countryList.appendChild(countryItem);
                });
            }

            // اختيار دولة
            function selectCountry(country) {
                selectedCountryData = country;
                selectedCountry.innerHTML = `
                    <span class="country-flag">${country.flag}</span>
                    <span class="country-code">${country.code}</span>
                    <i class="fas fa-chevron-down"></i>
                `;
                countrySelector.classList.remove('active');

                // تحديث النص التوضيحي بناءً على الدولة المختارة
                if (country.code === '+966') {
                    phoneNumber.placeholder = '5X XXX XXXX';
                } else {
                    phoneNumber.placeholder = 'أدخل رقم الجوال';
                }
            }

            // فتح/إغلاق قائمة الدول
            selectedCountry.addEventListener('click', (e) => {
                e.stopPropagation();
                countrySelector.classList.toggle('active');
            });

            // البحث في قائمة الدول
            countrySearch.addEventListener('input', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                const filteredCountries = countryCodes.filter(country =>
                    country.name.toLowerCase().includes(searchTerm) ||
                    country.code.includes(searchTerm)
                );
                populateCountryList(filteredCountries);
            });

            // إغلاق قائمة الدول عند النقر خارجها
            document.addEventListener('click', () => {
                countrySelector.classList.remove('active');
            });

            // منع إغلاق القائمة عند النقر داخلها
            countryDropdown.addEventListener('click', (e) => {
                e.stopPropagation();
            });

            // التحقق من صحة رقم الجوال بناءً على رمز الدولة
            function validatePhoneNumber(phone, countryCode) {
                let regex;
                switch (countryCode) {
                    case '+966': // السعودية
                        regex = /^(5)([0-9]{8})$/;
                        break;
                    case '+971': // الإمارات
                        regex = /^(5)([0-9]{8})$/;
                        break;
                    case '+965': // الكويت
                        regex = /^[569][0-9]{7}$/;
                        break;
                    case '+973': // البحرين
                        regex = /^(3)([0-9]{7})$/;
                        break;
                    case '+968': // عمان
                        regex = /^(9)([0-9]{7})$/;
                        break;
                    case '+974': // قطر
                        regex = /^[35-7][0-9]{7}$/;
                        break;
                    default:
                        // تنسيق عام للأرقام الدولية
                        regex = /^[0-9]{7,15}$/;
                }
                return regex.test(phone.replace(/\s/g, ''));
            }

            // التحقق من الشروط والأحكام
            const agreeTerms = document.getElementById('agreeTerms');
            const termsError = document.getElementById('termsError');
            const submitBtn = document.getElementById('submitBtn');
            const registerForm = document.getElementById('registerForm');

            if (registerForm) {
                registerForm.addEventListener('submit', function(e) {
                    let isValid = true;

                    // التحقق من رقم الجوال
                    const phoneValue = phoneNumber.value.trim().replace(/\s/g, '');
                    if (!validatePhoneNumber(phoneValue, selectedCountryData.code)) {
                        phoneError.textContent = 'يرجى إدخال رقم جوال صحيح';
                        phoneNumber.parentElement.parentElement.style.borderColor = '#e74c3c';
                        isValid = false;
                    } else {
                        phoneError.textContent = '';
                        phoneNumber.parentElement.parentElement.style.borderColor = '#4a69bd';
                    }

                    // التحقق من الشروط والأحكام
                    if (!agreeTerms.checked) {
                        termsError.textContent = 'يجب الموافقة على الشروط والأحكام';
                        isValid = false;
                    } else {
                        termsError.textContent = '';
                    }

                    if (!isValid) {
                        e.preventDefault();
                    } else {
                        // إضافة رمز الدولة إلى قيمة رقم الجوال قبل الإرسال
                        const fullPhoneNumber = selectedCountryData.code + phoneValue;
                        phoneNumber.value = fullPhoneNumber;
                    }
                });
            }

            // التحقق أثناء الكتابة
            if (phoneNumber) {
                phoneNumber.addEventListener('input', function() {
                    const phoneValue = this.value.trim().replace(/\s/g, '');
                    if (validatePhoneNumber(phoneValue, selectedCountryData.code)) {
                        phoneError.textContent = '';
                        this.parentElement.parentElement.style.borderColor = '#4a69bd';
                    } else {
                        this.parentElement.parentElement.style.borderColor = '#e74c3c';
                    }
                });
            }

            if (agreeTerms) {
                agreeTerms.addEventListener('change', function() {
                    if (this.checked) {
                        termsError.textContent = '';
                    }
                });
            }

            // فتح نافذة الشروط والأحكام
            const termsLink = document.getElementById('termsLink');
            const termsModal = document.getElementById('termsModal');
            const closeTerms = document.getElementById('closeTerms');
            const agreeTermsBtn = document.getElementById('agreeTermsBtn');
            const cancelTermsBtn = document.getElementById('cancelTermsBtn');

            if (termsLink && termsModal) {
                termsLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    termsModal.style.display = 'flex';
                });
            }

            if (closeTerms && termsModal) {
                closeTerms.addEventListener('click', function() {
                    termsModal.style.display = 'none';
                });
            }

            if (agreeTermsBtn && termsModal && agreeTerms) {
                agreeTermsBtn.addEventListener('click', function() {
                    agreeTerms.checked = true;
                    termsModal.style.display = 'none';
                    termsError.textContent = '';
                });
            }

            if (cancelTermsBtn && termsModal) {
                cancelTermsBtn.addEventListener('click', function() {
                    termsModal.style.display = 'none';
                });
            }

            // فتح نافذة سياسة الخصوصية
            const privacyLink = document.getElementById('privacyLink');
            const privacyModal = document.getElementById('privacyModal');
            const closePrivacy = document.getElementById('closePrivacy');
            const agreePrivacyBtn = document.getElementById('agreePrivacyBtn');
            const cancelPrivacyBtn = document.getElementById('cancelPrivacyBtn');

            if (privacyLink && privacyModal) {
                privacyLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    privacyModal.style.display = 'flex';
                });
            }

            if (closePrivacy && privacyModal) {
                closePrivacy.addEventListener('click', function() {
                    privacyModal.style.display = 'none';
                });
            }

            if (agreePrivacyBtn && privacyModal) {
                agreePrivacyBtn.addEventListener('click', function() {
                    privacyModal.style.display = 'none';
                });
            }

            if (cancelPrivacyBtn && privacyModal) {
                cancelPrivacyBtn.addEventListener('click', function() {
                    privacyModal.style.display = 'none';
                });
            }

            // إغلاق النوافذ عند النقر خارجها
            window.addEventListener('click', function(e) {
                if (e.target === termsModal) {
                    termsModal.style.display = 'none';
                }
                if (e.target === privacyModal) {
                    privacyModal.style.display = 'none';
                }
            });

            // تهيئة المؤثرات
            setTimeout(function() {
                document.querySelector('.family-login-card').style.opacity = '1';
            }, 100);

            populateCountryList(countryCodes);
        });
    </script>

